{
  "name": "supergateway",
  "version": "3.4.0",
  "description": "Run MCP stdio servers over SSE, Streamable HTTP or visa versa",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/supercorp-ai/supergateway.git"
  },
  "keywords": [
    "mcp",
    "stdio",
    "sse",
    "gateway",
    "proxy",
    "bridge"
  ],
  "type": "module",
  "bin": {
    "supergateway": "dist/index.js"
  },
  "scripts": {
    "build": "bun run tsc -p tsconfig.build.json",
    "start": "bun run dist/index.js",
    "format": "bun run prettier --write 'src/**/*.ts' '*.json' '.prettierrc'",
    "format:check": "bun run prettier --check 'src/**/*.ts' '*.json' '.prettierrc'",
    "test": "bun run --test --test-concurrency=1 --experimental-loader ts-node/esm --experimental-test-module-mocks tests/**/*.test.ts",
    "prepare": "bun run husky"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "uuid": "^11.1.0",
    "ws": "^8.18.3",
    "yargs": "^17.7.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.6",
    "prev-modelcontextprotocol-sdk": "npm:@modelcontextprotocol/sdk@1.4.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^22.17.0",
    "@types/ws": "^8.18.1",
    "@types/yargs": "^17.0.33",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.3",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  }
}
